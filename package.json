{
  "name": "BE2-NC-Knews",
  "version": "1.0.0",
  "description": "## Northcoders News API",
  "main": "index.js",
  "scripts": {
    "test": "mocha spec",
    "lint": "eslint ./",
    "pre-commit": "npm t",
    "posttest": "npm run lint",
    "setup-dbs": "psql -f db/setup.sql",
    "migrate-make": "npx knex migrate:make",
    "migrate-rollback": "npx knex migrate:rollback",
    "migrate-latest": "npx knex migrate:latest",
    "migrate-update": "npx knex migrate:rollback && npx knex migrate:latest",
    "seed": "npx knex seed:run",
    "start": "node listen.js",
    "seed:prod": "NODE_ENV=production DB_URL=$(heroku config:get DATABASE_URL) knex seed:run",
    "migrate:latest:prod": "NODE_ENV=production DB_URL=$(heroku config:get DATABASE_URL) knex migrate:latest",
    "migrate:rollback:prod": "NODE_ENV=production DB_URL=$(heroku config:get DATABASE_URL) knex migrate:rollback"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/northcoders/BE2-NC-Knews.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/northcoders/BE2-NC-Knews/issues"
  },
  "homepage": "https://github.com/northcoders/BE2-NC-Knews#readme",
  "dependencies": {
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "express": "^4.16.4",
    "knex": "^0.15.2",
    "mocha": "^5.2.0",    
    "pg": "^7.8.0",
    "supertest": "^3.4.2"
  },
  "devDependencies": {
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "nodemon": "^1.18.10",
    "husky": "^1.1.4"
  }
}
